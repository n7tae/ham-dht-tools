Explain () {
	echo "c (for Country)"
	echo "e (for Email)"
	echo "p (for Port)"
	echo "s (for Sponsor)"
	echo "u (for URL)"
	echo "v (for Version)"
	echo "4 (for IPv4Address)"
	echo "6 (for IPv6Address)"
}

if (( $# != 3 )); then
	echo Usage: "$0 reflector module (c|e|p|s|u|v|4|6)"
	Explain
	exit 1
fi

k=${3,,}

if [[ "$k" == c* ]]; then
	p='Country'
elif [[ "$k" == e* ]]; then
	p='Email'
elif [[ "$k" == p* ]]; then
	p='Port'
elif [[ "$k" == s* ]]; then
	p='Sponsor'
elif [[ "$k" == u* ]]; then
	p='URL'
elif [[ "$k" == v* ]]; then
	p='Version'
elif [[ "$k" == 4* ]]; then
	p='IPv4Address'
elif [[ "$k" == 6* ]]; then
	p='IPv6Address'
else
	echo "'$3' is not regcognized! Please use one of:"
	Explain
	exit 2
fi

reflectors=( `./dht-spider -l $1 $2` )

for r in ${reflectors[*]}
do
	echo $r `./dht-get -sc $r | jq --raw-output .Configuration.$p`
done

exit 0
